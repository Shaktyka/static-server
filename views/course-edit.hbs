<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input id="title" type="text" class="validate" name="title" value="{{course.title}}" required>
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>

  <div class="input-field">
    <input id="price" type="number" class="validate" name="price" min="1" value="{{course.price}}" required>
    <label for="price">Цена курса</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>

  <div class="input-field">
    <input id="img" type="text" class="validate" name="url" value="{{course.img}}" required>
    <label for="img">URL иллюстрации</label>
    <span class="helper-text" data-error="Введите URL изображения"></span>
  </div>

  <input type="hidden" name="{{id}}" value="{{course.id}}">

  <button class="btn btn-primary">Редактировать курс</button>
</form>
