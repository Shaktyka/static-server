<h1>Добавить новый курс</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" type="text" class="validate" name="title" required>
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>

  <div class="input-field">
    <input id="price" type="number" class="validate" name="price" min="1" required>
    <label for="price">Цена курса</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>

  <div class="input-field">
    <input id="img" type="text" class="validate" name="url" required>
    <label for="img">URL иллюстрации</label>
    <span class="helper-text" data-error="Введите URL изображения"></span>
  </div>

  <button class="btn btn-primary">Добавить курс</button>
</form>
